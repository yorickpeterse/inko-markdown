  t.test('Generator.generate with code spans', fn (t) {
    t.equal(gen('`abc`'), '<p><code>abc</code></p>')
    t.equal(gen('`<>`'), '<p><code>&lt;&gt;</code></p>')
  })

  t.test('Generator.generate with code blocks', fn (t) {
    t.equal(gen('```\nfoo\n```'), '<pre><code>foo\n</code></pre>')
